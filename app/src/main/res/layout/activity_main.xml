<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_Apps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Paquete de la aplicación"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/b_Cambiar_App"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cambiarApp"
        android:text="Agregar regla de aplicación" />

    <EditText
        android:id="@+id/et_Paginas_Web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Dirección web"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/b_Cambiar_Pagina_Web"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cambiarPaginaWeb"
        android:text="Agregar regla web" />

</LinearLayout>